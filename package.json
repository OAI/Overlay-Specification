{
  "name": "overlay",
  "version": "1.0.0",
  "description": "OAI Overlay Specification",
  "author": {
    "name": "OpenAPI Initiative - Overlay Working Group",
    "email": "tsc@openapis.org",
    "url": "https://openapis.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OAI/Overlay-Specification.git"
  },
  "license": "Apache-2.0",
  "readmeFilename": "README.md",
  "dependencies": {
    "cheerio": "^1.1.2",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "respec": "35.6.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@hyperjump/json-schema-coverage": "^1.2.0",
    "@umbrelladocs/linkspector": "^0.4.7",
    "c8": "^10.1.3",
    "markdownlint-cli2": "^0.19.0",
    "prettier": "^3.6.2",
    "vitest": "^4.0.12",
    "yaml": "^2.8.1"
  },
  "keywords": [
    "API",
    "OAI",
    "OAS",
    "OpenAPI",
    "Overlay",
    "Specification",
    "Swagger"
  ],
  "scripts": {
    "build": "bash ./scripts/md2html/build.sh",
    "build-dev": "npm run validate-markdown && bash ./scripts/md2html/build.sh dev && bash ./scripts/schema-publish.sh dev",
    "format-markdown": "bash ./scripts/format-markdown.sh *.md schemas/**/*.md versions/*.md",
    "validate-markdown": "markdownlint-cli2 *.md schemas/**/*.md versions/*.md && linkspector check",
    "test": "c8 --100 vitest run --coverage"
  }
}
